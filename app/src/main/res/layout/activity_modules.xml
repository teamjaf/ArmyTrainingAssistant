<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".layouts.Recruit.Modules">

    <androidx.cardview.widget.CardView
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        app:cardBackgroundColor="@color/green2"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:onClick="btn_back"
            android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="180dp"
                android:text="Modules"
                android:gravity="center"
                 android:layout_gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_bold"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform"
                android:layout_height="28dp"/>


    </androidx.cardview.widget.CardView>

    <ScrollView

        android:id="@+id/scrollModule"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="30dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="140dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="20dp"

                    app:elevation="5dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/card_armyKnowledge"
                         android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/army_knowledge_module" />

                        <TextView
                            app:autoSizeMaxTextSize="30sp"
                            android:textAlignment="center"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Army Knowledge"
                            android:textColor="@color/black_dark2"
                              />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="130dp"
                    app:elevation="5dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/card_physicalTraining"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/physical_traning_module" />

                        <TextView
                            app:autoSizeMaxTextSize="30sp"
                            android:textAlignment="center"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform"
                             android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Physical Training"
                            android:textColor="@color/black_dark2"
                              />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="130dp"
                    android:layout_marginEnd="20dp"
                    app:elevation="5dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/card_resiliency"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/reciliency_module" />

                        <TextView
                            app:autoSizeMaxTextSize="30sp"
                            android:textAlignment="center"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Resiliency"
                            android:textColor="@color/black_dark2"
                              />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="130dp"

                    app:elevation="5dp"

                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/card_rifleMarksmanship"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/riflemarkmanship_module" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Rifle Marksmanship"
                            android:textColor="@color/black_dark2"
                            app:autoSizeMaxTextSize="30sp"
                            android:textAlignment="center"
                            app:autoSizeMinTextSize="10sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="140dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="130dp"
                    app:elevation="5dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:id="@+id/card_returningFromBasic"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/returning_basic_module" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center"
                            android:text="Returning from Basic"
                            android:textColor="@color/black_dark2"
                            app:autoSizeMaxTextSize="30sp"
                            android:textAlignment="center"
                            app:autoSizeMinTextSize="7sp"
                            app:autoSizeTextType="uniform" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <TextView
         android:visibility="gone"
        android:id="@+id/txt_alertHolds"
        android:gravity="center"
        android:layout_below="@id/topBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:padding="10dp"
         android:textSize="16sp"
        android:textColor="@color/black_dark"
        android:layout_width="wrap_content"
        android:text="@string/holdover_message"
        android:layout_height="wrap_content"/>

</RelativeLayout>