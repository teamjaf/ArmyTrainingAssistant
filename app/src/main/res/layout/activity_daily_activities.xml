<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
     tools:context=".layouts.Recruit.DailyActivities">

    <androidx.cardview.widget.CardView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/green2"
        app:cardCornerRadius="0dp"
       >


            <ImageButton

                android:layout_alignParentStart="true"
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:onClick="btn_back"
                android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txt_screenName"
            android:layout_width="190dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:layout_toEndOf="@id/btn_back"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="Daily Activities"
            android:textColor="@android:color/white"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="7sp"
            app:autoSizeTextType="uniform" />



    </androidx.cardview.widget.CardView>

<ScrollView
    android:layout_below="@id/appBar"
    android:layout_width="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_bg_2"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="PUSH UPS"
                android:textColor="@color/white"
                  />

            <TextView
                android:id="@+id/txt_pushups"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@drawable/gradient_bg_2"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="25sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform" />

            <ImageButton
                android:id="@+id/btn_PushUps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:src="@drawable/ic_add"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_bg_2"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="SIT UPS"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/txt_sitUps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_bg_2"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="25sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform" />

            <ImageButton
                android:id="@+id/btn_sitUps"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:src="@drawable/ic_add"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_bg_2"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="MILE RUN"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="20sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform" />

            <TextView
                android:layout_gravity="center"
                android:id="@+id/txt_mileRun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_bg_2"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="0"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="25sp"
                app:autoSizeMinTextSize="7sp"
                app:autoSizeTextType="uniform" />

            <ImageButton
                android:id="@+id/btn_mileRun"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="@drawable/btn_shape"
                android:gravity="center"
                android:src="@drawable/ic_add"

                />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_notes"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins"
            android:inputType="textFilter|textMultiLine"
             android:gravity="start"
            android:hint="Note"
            android:lines="7"
            android:padding="10dp"
            android:textColor="@color/black_dark2"
            android:textColorHint="#818080" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                 android:layout_weight="1"
                android:id="@+id/btn_saveExercise"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                 android:background="@drawable/btn_shape"
                android:fontFamily="@font/poppins_semibold"
                android:text="Save"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform"
                android:padding="7dp"
                  android:textColor="@color/black_dark2"
                 />
            <View
                android:layout_width="25dp"
                android:layout_height="wrap_content"/>
            <Button
                 app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform"
                android:padding="8dp"
                android:layout_weight="1"
                android:id="@+id/btn_watchVideos"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_shape"
                android:fontFamily="@font/poppins_semibold"
                android:text="Watch Video"
                android:textColor="@color/black_dark2"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>


</RelativeLayout>