<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".layouts.Ambassador.AmbassadorWelcome">


    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="@drawable/gradient_bg"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Hooah!! Your  recruit recived Badges! "
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:onClick="btn_signUp2"
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_medium"
            android:text="My Recruit's Performance"
            android:paddingEnd="10dp"
            android:drawableEnd="@drawable/ic_performance"
            android:textColor="@color/black_dark2"
            android:textSize="16sp" />
        <Button
            android:onClick="btn_signUp2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_medium"
            android:text="Message"
            android:paddingEnd="10dp"
            android:drawableEnd="@drawable/ic_message"
            android:textColor="@color/black_dark2"
            android:textSize="16sp" />

        <Button
            android:onClick="btn_signUp2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_medium"
            android:text="Facebook Group"
            android:paddingEnd="10dp"

            android:drawableEnd="@drawable/ic_facebook"
            android:textColor="@color/black_dark2"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="@color/green1"
            android:fontFamily="@font/poppins"
            android:lineHeight="20dp"
            android:text="@string/ambassador_welcome_screen"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/txt_ContactUs"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Contact Support "
            android:drawableEnd="@drawable/ic_forward_arrow"
            android:textColor="@color/black_dark2"
            tools:ignore="UseCompatTextViewDrawableXml" />
    </LinearLayout>

</RelativeLayout>