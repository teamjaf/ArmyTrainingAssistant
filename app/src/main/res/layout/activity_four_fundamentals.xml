<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".layouts.Recruit.FourFundamentals">

    <androidx.cardview.widget.CardView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        app:cardBackgroundColor="@color/green2"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:onClick="btn_back"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txt_screenName"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_marginStart="15dp"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="8sp"
            app:autoSizeTextType="uniform"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Four Fundamentals"
            android:textAlignment="center"
            android:textColor="@android:color/white" />

    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
         android:layout_width="match_parent"
        android:layout_below="@id/appBar"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_conduts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/youtube_player_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_bg"
                    android:orientation="vertical"
                    android:paddingStart="15dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        app:autoSizeMaxTextSize="30sp"
                        app:autoSizeMinTextSize="8sp"
                        android:padding="1dp"
                        app:autoSizeTextType="uniform"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Four Fundamentals of Marksmanship"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:text="@string/four_fundamentals_desc"
                        android:textColor="@color/white" />




                </LinearLayout>



        </androidx.cardview.widget.CardView>

        <Button
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_semibold"
            android:onClick="btn_steadyPosition"
            android:padding="8dp"
            android:text="Steady Position"
            android:textColor="@color/black_dark2"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform" />
        <Button
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_semibold"
            android:onClick="btn_aiming"
            android:padding="8dp"
            android:text="Aiming"
            android:textColor="@color/black_dark2"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform" />
        <Button
            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_semibold"
            android:onClick="btn_breathControl"
            android:padding="8dp"
            android:text="Breath Control"
            android:textColor="@color/black_dark2"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform" />
        <Button

            android:textAllCaps="false"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_semibold"
            android:onClick="btn_triggerSqueeze"
            android:padding="8dp"
            android:text="Trigger Squeeze"
            android:textColor="@color/black_dark2"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform" />


    </LinearLayout>

    </ScrollView>

</RelativeLayout>