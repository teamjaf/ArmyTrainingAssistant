<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_rankCatName"
        android:background="@color/grey_progress"
        android:text="Rank Category"
        android:padding="5dp"
        app:autoSizeMaxTextSize="30sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeTextType="uniform"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins_medium"
        android:layout_width="match_parent"
        android:layout_height="32dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="18sp"
            android:id="@+id/txt_rankTitle"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            android:textColor="@color/black_dark"
            android:text="Private"
            android:fontFamily="@font/poppins"
            android:padding="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
             android:layout_width="0.5dp"
            android:background="@color/greyHint"
            android:layout_height="match_parent"/>
        <TextView
            app:autoSizeMinTextSize="10sp"

            app:autoSizeMaxTextSize="18sp"
            android:id="@+id/txt_rankAbr"
            android:padding="5dp"
            android:gravity="center"
            app:autoSizeTextType="uniform"
            android:textColor="@color/black_dark"
            android:text="Major Corporal"
            android:fontFamily="@font/poppins"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <View
             android:layout_width="0.5dp"
            android:background="@color/greyHint"
            android:layout_height="match_parent"/>
        <TextView
            app:autoSizeMinTextSize="10sp"
            app:autoSizeMaxTextSize="18sp"
            android:id="@+id/txt_rankPayGrad"
            android:padding="5dp"
            android:gravity="center"
            app:autoSizeTextType="uniform"
            android:textColor="@color/black_dark"
            android:text="Major Corporal"
            android:fontFamily="@font/poppins"
            android:layout_width="120dp"
            android:layout_height="wrap_content"/>
        <View
             android:layout_width="0.5dp"
            android:background="@color/greyHint"
            android:layout_height="match_parent"/>
        <TextView

            android:layout_weight="1"
            android:id="@+id/txt_rankRemarks"
            android:padding="5dp"
            android:fontFamily="@font/poppins"
             android:textColor="@color/black_dark"
            android:text="Major Corporal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </LinearLayout>
    <View
         android:layout_width="match_parent"
        android:background="@color/greyHint"
        android:layout_height="0.5dp"/>

</LinearLayout>