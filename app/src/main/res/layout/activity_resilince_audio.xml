<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".layouts.Recruit.ResilinceAudio">

    <androidx.cardview.widget.CardView
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/green2"
        app:cardCornerRadius="0dp"
        app:contentPadding="12sp">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:onClick="btn_back"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txt_screenName"
            android:layout_width="180dp"
            android:gravity="center"
            android:layout_height="29dp"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_bold"
            android:text="Resilience Audio"
            android:textColor="@android:color/white"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/appBar"
        android:gravity="center"
        android:layout_height="match_parent">

        <Button
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_volume"
            android:id="@+id/btn_armySong"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_medium"
            android:padding="8dp"
            android:text="Listen to Army Song"
            android:textColor="@color/black_dark2"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform" />

        <Button
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_volume"
            android:id="@+id/btn_armyValue"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_medium"
            android:padding="8dp"
            android:text="Listen to Army Values"
            android:textColor="@color/black_dark2"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform" />

        <Button
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_volume"
            android:id="@+id/btn_soliderCreed"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_shape"
            android:fontFamily="@font/poppins_medium"
            android:padding="8dp"
            android:text="Listen to Solder's Creed"
            android:textColor="@color/black_dark2"
            app:autoSizeMaxTextSize="30sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeTextType="uniform" />
    </LinearLayout>


</RelativeLayout>